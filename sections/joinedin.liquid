
<div id="home-page" class="index-section home-section {% if section.settings.home-page-bg %} mainbg {% endif %}">
	<div class="home-page-joined">
		{% for block in section.blocks %}
			<div class=" wrapper">
				<div class="grid__item medium-down--one-whole">
					<div class="large--display-table">
						<div id="frontopague" class="large--display-table-cell">

							{% unless block.settings.home-featured-title == blank %}
								<h3 class="frontheadline">{{ block.settings.home-featured-title | escape }}</h3>
							{% endunless %}
							{% unless block.settings.home-featured-content == blank %}
								{{ block.settings.home-featured-content }}
							{% endunless %}
							{% unless block.settings.home-featured-btn-label == blank %}
								<a class="btn btn--regular btn--outline btn--light" href="{{ block.settings.home-featured-btn-url }}">{{ block.settings.home-featured-btn-label | escape }}</a>
							{% endunless %}

						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>

{% schema %}
	{
		"name": "Image with text overlay2",
		"settings": [
			{
				"type": "image_picker",
				"id": "home-page-bg",
				"label": "Background image"
			}
		],
		"blocks": [
			{
				"type": "text",
				"name": "Image with text2",
				"settings": [
					{
						"type": "select",
						"id": "home-featured-align",
						"label": "Image alignment",
						"default": "left-img",
						"options": [
							{
								"value": "left-img",
								"label": "Left"
							},
							{
								"value": "right-img",
								"label": "Right"
							}
						]
					},
					{
						"type": "image_picker",
						"id": "image",
						"label": "Image"
					},
					{
						"type": "text",
						"id": "home-featured-title",
						"label": "Heading",
						"default": "Talk about your brand"
					},
					{
						"type": "richtext",
						"id": "home-featured-content",
						"label": "Text",
						"default": "<p>Use this text to share information about your brand with your customers. <b>Describe a product, share announcements, or welcome customers to your store.</b></p>"
					},
					{
						"type": "text",
						"id": "home-featured-btn-label",
						"label": "Button label"
					},
					{
						"type": "url",
						"id": "home-featured-btn-url",
						"label": "Button link"
					}
				]
			}
	 ],
		"presets": [{
			"name": "Image with text overlay",
			"category": "Image",
			"blocks": [
				{
					"type": "text"
				}
			]
		}]
	}
{% endschema %}
